# =============================================================================
# SHOPMEFY BACKEND ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://shopmefy:shopmefy@localhost:5434/shopmefy
DB_NAME=shopmefy
DB_USER=shopmefy
DB_PASSWORD=shopmefy

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=uploads/documents
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# =============================================================================
# LOGGING
# =============================================================================
ENABLE_HTTP_LOGS=true

# =============================================================================
# AWS CONFIGURATION (for production deployment)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_ACCOUNT_ID=your_aws_account_id
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# =============================================================================
# EC2 DEPLOYMENT (for production deployment)
# =============================================================================
EC2_HOST=your_ec2_ip_or_hostname
EC2_USER=ubuntu
EC2_SSH_KEY=your_private_ssh_key_content 